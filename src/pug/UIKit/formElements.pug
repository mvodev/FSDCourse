.form-elements__wrapper
 +header
 .form-elements__left-column
  h2(class='form-elements__left-column_header')
   span='Text Field'
   span='Default'
  +textfield({isDefault:true,placeholder:'Email'})
  h2(class='form-elements__left-column_header')
   span='Text Field'
   span='HOVER/FOCUS'
  +textfield({isFocused:true,placeholder:'This is pretty awesome'})
  h2(class='form-elements__left-column_header')
   span='Dropdown'
   span='Default'
  +dropdown({placeholder:'Сколько гостей',typeDropdown:'guests',isExpanded:false})
  h2(class='form-elements__left-column_header')
   span='Masked Text Field'
   span='Default'
  +textfield({isMasked:true,placeholder:'ДД.ММ.ГГГГ'})
  h2(class='form-elements__left-column_header')
   span='Date Dropdown'
  +dropdown({placeholder:'ДД.ММ.ГГГГ',typeDropdown:'date',isExpanded:false})
  h2(class='form-elements__left-column_header')
   span='Filter Date Dropdown'
  +dropdown({placeholder:'ДД.ММ.ГГГГ',typeDropdown:'filter',isExpanded:false})
  h2(class='form-elements__left-column_header')
    span='Subscription Text Field'
  +textfield({isSubscription:true,placeholder:'Email'})
  h2(class='form-elements__left-column_header-dropdown header-dropdown-room')
    span='Dropdown'
    span='DEFAULT'
  +dropdown({typeDropdown:'room',placeholder:'2 спальни,2 кровати'})
  h2(class='form-elements__left-column_header-dropdown header-dropdown-room')
    span='Dropdown'
    span='EXPANDED'
  +dropdown({typeDropdown:'room',placeholder:'2 спальни,2 кровати',isExpanded:true})
  +list({type:'expandable',label:'expandable checkbox list',isExpand:false,
   labels:[{text:'Завтрак',isChecked:false},
   {text:'Письменный стол',isChecked:true},{text:'Стул для кормления',isChecked:true},{text:'Кроватка',isChecked:true},{text:'Телевизор'},{text:'Шампунь'}]})
  +list({type:'expandable',label:'expandable checkbox list',isExpand:true,
   labels:[{text:'Завтрак',isChecked:false},
   {text:'Письменный стол',isChecked:true},{text:'Стул для кормления',isChecked:true},{text:'Кроватка',isChecked:true},{text:'Телевизор'},{text:'Шампунь'}]})
  +list({type:'icons',icon:'insert_emoticon',header:'Комфорт',text:'Шумопоглощающие стены'})
  +list({type:'icons',icon:'location_city',header:'Удобство',text:'Комфорт в каждой из спален'})
