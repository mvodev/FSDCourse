include modules/dropdown.pug
include modules/textField.pug
include modules/rangeSlider.pug
include modules/button.pug
include modules/toggle.pug
include modules/list.pug
include modules/comment.pug
include modules/pagination.pug
include headerUiKit.pug
.form-elements__wrapper
 +header
 .form-elements__left-column
  h2(class='header header_text-field-default')
   div='Text Field'
   div='Default'
  +textfield({isDefault:true,placeholder:'Email'})
  h2(class='header header_text-field-hover')
   div='Text Field'
   div='HOVER / FOCUS'
  +textfield({isFocused:true,placeholder:'This is pretty awesome'})
  h2(class='header header_dropdown-default')
   div='Dropdown'
   div='Default'
  +dropdown({placeholder:'Сколько гостей',typeDropdown:'guests',isExpanded:false})
  h2(class='header header_masked-text-field')
   div='Masked Text Field'
   div='Default'
  +textfield({isMasked:true,placeholder:'ДД.ММ.ГГГГ'})
  .form-elements__left-column_dropdown-wrapper
   h2(class='header header_date-dropdown')
    div='Date Dropdown'
    div='Date Dropdown'
   div
    +dropdown({placeholder:'ДД.ММ.ГГГГ',typeDropdown:'date',isExpanded:false})
    +dropdown({placeholder:'19.08.2019',typeDropdown:'date',isExpanded:false})
  h2(class='header header_filter-date-dropdown') 
    div='Filter Date Dropdown'
  +dropdown({placeholder:'19 авг - 23 авг',typeDropdown:'filter',isExpanded:false})
  h2(class='header header_subscription-text-field')
    div='Subscription Text Field'
  +textfield({isSubscription:true,placeholder:'Email'})
  h2(class='header header_dropdown-room')
    div='Dropdown'
    div='DEFAULT'
  +dropdown({typeDropdown:'room',placeholder:'2 спальни,2 кровати'})
  h2(class='header header_dropdown-room-expanded')
    div='Dropdown'
    div='EXPANDED'
  +dropdown({typeDropdown:'room',placeholder:'2 спальни,2 кровати',isExpanded:true})
  div(class='bullet-list-expandable_first')
    +list({type:'expandable',label:'expandable checkbox list',isExpand:false,
    labels:[{text:'Завтрак',isChecked:false},
    {text:'Письменный стол',isChecked:true},{text:'Стул для кормления',isChecked:true},{text:'Кроватка',isChecked:true},{text:'Телевизор',isChecked:false},{text:'Шампунь',isChecked:false}]})
  +list({type:'expandable',label:'expandable checkbox list',isExpand:true,
    labels:[{text:'Завтрак',isChecked:false},
    {text:'Письменный стол',isChecked:true},{text:'Стул для кормления',isChecked:true},{text:'Кроватка',isChecked:true},{text:'Телевизор',isChecked:false},{text:'Шампунь',isChecked:false}]})
  div(class='bullet-list-icons_first')
    +list({type:'icons',icon:'insert_emoticon',header:'Комфорт',text:'Шумопоглощающие стены'})
  +list({type:'icons',icon:'location_city',header:'Удобство',text:'Окно в каждой из спален'})
 .form-elements__central-column
  h2(class='header header_checkbox-buttons')='CHECkBOX BUTTONS'
  +button({type:'check',labels:[{text:'Можно курить',isChecked:false},{text:'Можно с питомцами',isChecked:true},{text:'Можно пригласить гостей(до 10 человек)',isChecked:false}]})
  h2(class='header header_radio-buttons')='RADIO BUTTONS'
  .radio-button-wrapper
    +button({type:'radio',label:'Мужчина',isChecked:true})
    +button({type:'radio',label:'Женщина'})
  h2(class='header header_toggle')='TOGGLE'
  +toggle({labels:[{name:'Получать спецпредложения',  isPositive:true},{name:'Получать спецпредложения',  isPositive:false}]})
  h2(class='header header_like-buttons')='LIKE BUTTON'
  .like-buttons-wrapper
    +button({type:'like',likeNumber:2})
    +button({type:'like',likeNumber:12,isLiked:true})
  h2(class='header header_rate-buttons')='RATE BUTTON'
  .rate-buttons-wrapper
    +button({type:'rate',darkStar:4})
    +button({type:'rate',darkStar:1})
  h2(class='header header_dropdown')='DROPDOWN'
  +dropdown({placeholder:"Сколько гостей",typeDropdown:'guests',isExpanded:true})
  h2(class='header header_rich-buttons')='Rich Checkbox Buttons'
  +button({type:'rich',header:'Широкий коридор',label:'Ширина коридоров в номере не менее 91 см.'})
  +button({type:'rich',header:'Помощник для инвалидов',label:'На 1 этаже вас встретит специалист  и проводит до номера.'})
 .form-elements__right-column
  +rangeSlider({label:'RANGE SLIDER'})
  h2='BUTTONS'
  .form-elements__right-column_buttons-wrapper
    .form-elements__right-column_buttons-wrapper-first-row
      +button({label:'CLICK ME',type:'dark'})
      +button({label:'CLICK ME',type:'dark50'})
    .form-elements__right-column_buttons-wrapper-second-row
      +button({label:'CLICK ME',type:'white'})
      +button({label:'CLICK ME',type:'white50'})
    .form-elements__right-column_buttons-wrapper-third-row
      +button({label:'CLICK ME',type:'transparent'})
      +button({label:'CLICK ME',type:'transparent50'})
    .form-elements__right-column_buttons-wrapper-fourth-row
      +button({label:'ПЕРЕЙТИ К ОПЛАТЕ',type:'arrow'})
  h2='pagination'
  +pagination({isEllipsis:true,firstNumbers:[1,2,3],lastNumber:15,selectedPage:1,
  label:'1 – 12 из 100+ вариантов аренды'})
  h2='Dropdown'
  +dropdown({placeholder:"Сколько гостей",typeDropdown:'guests',isExpanded:true})
  h2='Bullet List'
  +list({labels:['Нельзя с питомцами','Без вечеринок и мероприятий','Время прибытия — после 13:00,а выезд до 12:00']})
 .form-elements__comment
  +comment({headerName:'Мурад Сарафанов',headerTime:'5 дней назад',imgSource:'../src/assets/img/png/muradik.png',likeNumber:12,isLiked:true,text:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
