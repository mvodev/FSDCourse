include button.pug
mixin list(options)
  - var listClassName=''
  - listClassName=options.type=='expandable' ? 'bullet-list-expandable' : 'bullet-list'
  - listClassName=options.type=='icons' ? 'bullet-list-icons' : 'bullet-list'
    if options.type==='expandable'
      div(class=listClassName)
        div(class=listClassName+'__label')=options.label
          span(class="material-icons")='keyboard_arrow_down'
        div(class=listClassName+'__dropdown')
          each val in options.labels ? options.labels : ['There are no values']
            div(class=listClassName+'__dropdown-elem')
              +button({type:'check',text:val.text,isChecked:val.isChecked})
      script(src="../src/scripts/expandableCL.js")
    else if options.type==='icons'
      div(class=listClassName)
        div(class='material-icons '+listClassName+'__icon')=options.icon
        div(class=listClassName+'__header')=options.header
        div(class=listClassName+'__text')=options.text
    else
      div(class=listClassName)
        ul
        each val in options.labels ? options.labels : ['There are no values']
          li(class=listClassName+'__elem')= val

